NODE_ENV=development
PORT=5002
LOG_LEVEL=info

DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=accordo
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true
DB_ADMIN_DATABASE=postgres

JWT_SECRET=change-me
JWT_ACCESS_TOKEN_SECRET=
JWT_REFRESH_TOKEN_SECRET=
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Email Configuration
# EMAIL_PROVIDER can be 'nodemailer', 'sendmail', or left blank for auto-detection
# Auto-detection: uses sendmail if SMTP_HOST is not set, otherwise uses nodemailer
EMAIL_PROVIDER=

# SMTP Configuration (for nodemailer provider)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=

# Sendmail Configuration (for local testing with MailHog/Mailpit)
# Only used in development mode when EMAIL_PROVIDER=sendmail
SENDMAIL_DEV_PORT=5004
MAILHOG_WEB_PORT=5005

REDIS_URL=redis://localhost:6379

# OpenAI Configuration (optional - for fallback)
OPENAI_API_KEY=

# Local LLM Configuration (Ollama)
# Base URL where Ollama is running (default: http://localhost:11434)
LLM_BASE_URL=http://localhost:11434

# Model name to use (default: llama3.2)
# Available models: llama3.2, llama3.1:8b, mistral, llama3:70b, etc.
# Run 'ollama list' to see available models
LLM_MODEL=llama3.2

# Request timeout in milliseconds (default: 60000 = 60 seconds)
LLM_TIMEOUT=60000

# Embedding Service Configuration
# URL where the Python embedding service is running
EMBEDDING_SERVICE_URL=http://localhost:5003

# Frontend URLs for email links
# Note: Port 5000 is reserved by macOS AirPlay Receiver, frontend uses 5001
VENDOR_PORTAL_URL=http://localhost:5001/vendor
CHATBOT_FRONTEND_URL=http://localhost:5001
CHATBOT_API_URL=http://localhost:5002/api
