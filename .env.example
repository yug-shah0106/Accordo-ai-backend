NODE_ENV=development
PORT=5002
LOG_LEVEL=info

DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=accordo
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true
DB_ADMIN_DATABASE=postgres

JWT_SECRET=change-me
JWT_ACCESS_TOKEN_SECRET=
JWT_REFRESH_TOKEN_SECRET=
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Email Configuration - AWS SES
EMAIL_PROVIDER=nodemailer

# AWS SES SMTP Configuration
SMTP_HOST=email-smtp.ap-south-1.amazonaws.com
SMTP_PORT=465
SMTP_USER=your-ses-smtp-username
SMTP_PASS=your-ses-smtp-password
SMTP_FROM_EMAIL=your-verified-email@example.com

REDIS_URL=redis://localhost:6379

# OpenAI Configuration (GPT-3.5 Turbo for Procurement Manager)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Local LLM Configuration (Ollama)
# Base URL where Ollama is running (default: http://localhost:11434)
LLM_BASE_URL=http://localhost:11434

# Model name to use (default: qwen3)
# Available models: qwen3, llama3.2, mistral, etc.
# Run 'ollama list' to see available models
LLM_MODEL=qwen3

# Request timeout in milliseconds (default: 60000 = 60 seconds)
LLM_TIMEOUT=60000

# Embedding Provider Configuration
# Provider: local (default, CPU ONNX), openai (API), bedrock (AWS Titan)
EMBEDDING_PROVIDER=local
# Model override (defaults: local=Xenova/bge-large-en-v1.5, openai=text-embedding-3-small, bedrock=amazon.titan-embed-text-v2:0)
# EMBEDDING_MODEL=text-embedding-3-small
# Embedding dimensions (default: 1024)
# EMBEDDING_DIMENSION=1024
# Timeout in ms (default: 30000)
# EMBEDDING_TIMEOUT=30000

# AWS Configuration (for bedrock provider)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Legacy: Python embedding service URL (deprecated â€” use EMBEDDING_PROVIDER instead)
# EMBEDDING_SERVICE_URL=http://localhost:5003

# Frontend URLs for email links
# Note: Port 5000 is reserved by macOS AirPlay Receiver, frontend uses 5001
VENDOR_PORTAL_URL=http://localhost:5001/vendor
CHATBOT_FRONTEND_URL=http://localhost:5001
CHATBOT_API_URL=http://localhost:5002/api
